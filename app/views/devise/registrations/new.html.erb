<div id="request-invite" class="modal fade" style="display: <%= @user.errors.any? ? 'block' : 'none'; %>">
  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <!-- a class="close" data-dismiss="modal">&#215;</a -->
      <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3>Request Invitation</h3>
    </div>
    <div class="modal-body">
      <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' } do |f| %>

      <%= f.error_notification %>
      <%= f.input :email, :placeholder => 'user@example.com' %>
    </div>
    <div class="modal-footer">
      <%= f.submit "Request Invitation", :class => "btn btn-primary", :id => 'invitation_button' %>
      <a class="btn" data-dismiss="modal" href="#">Close</a>
    </div>
     <% end %>
  </div>
</div>
<div id="romance-copy" style="text-align: center; margin-top: 80px">
  <h2>Want in?</h2>
</div>
<!-- Trigger the modal with a button -->
<div align="center">
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#request-invite">Request Invite</button>
</div>
